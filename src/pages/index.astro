---
import body from'../components/body.astro';
import services from'../components/services.astro';
import footer from'../components/footer.astro';
import layout from'../layouts/base-layout.astro';
---

  <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Bhutkun</title>
    </head>
    <body class="min-h-screen">
     <layout>
  <div class="hero">
    <h1 class="hero-title">Design and Build Your Tech Team</h1>
    <p class="hero-text">We help companies with their technology transformation and team building.</p>
    <button class="hero-button">Contact Us</button>
  </div>

  <div class="services">
    <h2 class="services-title">Our Services</h2>
    <div class="service-card">
      <h3 class="service-card-title">Tech Transformation</h3>
      <p>We provide innovative solutions to help businesses adapt and grow with technology.</p>
    </div><br>
    <div class="service-card">
        <h3 class="service-card-title">Product Management</h3>
        <p class="service-card-text">We help businesses to maintain product and their maintainance</p>
       </div><br>
       <div class="service-card">
        <h3 class="service-card-title">Talent on Demand</h3>
        <p class="service-card-text">We help businesses by providing technical assistance.</p>
      </div>
  </div>

  <footer class="footer">
    <p>&copy; 2024 Bhutkun</p>
  </footer>
  </layout>
    <style>
      .services {
        background-color: white;
        padding: 50px;
        text-align: center;
      }
      .services-title {
        font-size: 28px;
        margin-bottom: 30px;
      }
      .service-cards {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
      }
      .service-card {
        background-color: yellow;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 300px;
        text-align: left;
      }
      .service-card-title {
        font-size: 20px;
        margin-bottom: 10px;
        color: #333;
      }
      .service-card-text {
        font-size: 16px;
        color: #666;
      }
    </style>
     <style>
    .footer {
      background-color:black;
      color: #fff;
      padding: 20px;
      text-align: bottom;
    }
  </style>
  <style>
    .hero {
      background-color: white;
      padding: 50px;
      text-align: center;
    }
    .hero-title {
      font-size: 36px;
      margin-bottom: 20px;
    }
    .hero-text {
      font-size: 18px;
      margin-bottom: 20px;
    }
    .hero-button {
      background-color: #333;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      align-button:right;
    }
  </style>
    </body>
  </html>

